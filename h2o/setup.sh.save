#!/bin/bash

# abfrageb machen

while read pumpeRelaisNrRead
do
	if ! [[ "$pumpeRelaisNrRead" =~ "^[0-9]+$" ]]
        then
            echo "Nur Nummerische Eingaben erlaubt!"
	fi
   	
   fi echo $zeile
done < namen


read -p "An welchem Relais ist die Pumpe angeschlossen? :> " $pumpeRelaisNr
while [ $counter -le $pumpeRelaisNr ]
do
    echo "testing counter value = $counter"
    let $counter++
done

sed -i 's/int pumpeRelaisNr = .*/int pumpeRelaisNr = ${pumpeRelaisNr};/' h2o.c


