CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2
TARGET = h2o_test
SRCS = h2o_test.cpp H2OSetupManager.cpp DebugLogger.cpp H2OFilterManager.cpp config.cpp
OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all clean

# ==== Code-Formatierung ====
FORMATTER = clang-format
SRC := $(shell find . -type f \( -name "*.c" -o -name "*.cpp" -o -name "*.h" -o -name "*.hpp" \))

format: .clang-format
	@echo "â†’ Formatierung mit clang-format..."
	$(FORMATTER) -i $(SRC)


